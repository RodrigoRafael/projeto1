<html>
<head>
<title>Qualificações</title>
  <meta content="charset=utf-8">
  <link rel="stylesheet" type="text/css" href="css/css.css">
</head>
<body>
  <div id="page">
    <div id="headerqua">
      <div class="background">
        <h1><a href="#">Vota Prato</a></h1>
        <ul>
          <li><a href="http://localhost:3000/Clientes">Clientes</a></li>
          <li><a href="http://localhost:3000/Comentarios">Comentários</a></li>
          <li><a href="http://localhost:3000/Restaurantes">Restaurantes</a></li>
          <li class="active"><a href="http://localhost:3000/Qualificacaos">Qualificações</a></li>
        </ul>
      </div>
    </div>
    <div id="giz">
      <div id="quadroesquerda">
        <div class="block">
          <div class="block-top"></div>
          <div class="block-content">

            <h1 align="center">~Lista de Qualificações~</h1>

<table align="center">
  <tr>
    <th>Cliente</th>
    <th>Restaurante</th>
    <th>Nota</th>
    <th>Valor gasto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @qualificacaos.each do |qualificacao| %>
  <tr>
    <td><%= qualificacao.cliente.nome %></td>
    <td><%= qualificacao.restaurante.nome %></td>
    <td><%= qualificacao.nota %></td>
    <td><%= qualificacao.valor_gasto %></td>
    <td><%= link_to 'Mostrar', qualificacao %></td>
    <td><%= link_to 'Editar', edit_qualificacao_path(qualificacao) %></td>
    <td><%= link_to 'Deletar', qualificacao, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />
<center>
<%= link_to 'Nova Qualificacao', new_qualificacao_path %>
</center>

</div>
          <div class="block-bottom"></div>
        </div>
      </div>
      <div id="quadrodireita">
        <div class="block">
