<html>
<head>
<title>Restaurantes</title>
	<meta content="charset=utf-8">
	<link rel="stylesheet" type="text/css" href="css/css.css">
</head>
<body>
	<div id="page">
		<div id="headerres">
			<div class="background">
				<h1><a href="#">Vota Prato</a></h1>
				<ul>
					<li><a href="http://localhost:3000/Clientes">Clientes</a></li>
					<li><a href="http://localhost:3000/Comentarios">Comentários</a></li>
					<li class="active"><a href="http://localhost:3000/Restaurantes">Restaurantes</a></li>
					<li><a href="http://localhost:3000/Qualificacaos">Qualificações</a></li>

				</ul>
			</div>
		</div>
		<div id="giz">
			<div id="quadroesquerda">
				<div class="block">
					<div class="block-top"></div>
					<div class="block-content">

						<%= render partial: "titulo" %>

<h1>Adicionando Restaurante</h1>
<%= form_for :restaurantes, :url => {:action=>'create'},
							:html => {:multipart=>true} do |f| %>
<!--outros campos-->
<%= f.file_field :foto %>
<% end %>
<% if @restaurante.errors.any? %>
<ul>
<% @restaurante.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for :restaurante, url: {action: 'create'} do |f| %>
Nome: <%= f.text_field :nome %><br/>
Endereço: <%= f.text_field :endereco %><br/>
Especialidade: <%= f.text_field :especialidade %><br/>


<%= submit_tag 'Criar' %>


<% end %>
<%= link_to 'Voltar', {action: 'index' } %>
</div>
					<div class="block-bottom"></div>
				</div>
			</div>
			<div id="quadrodireita">
				<div class="block">
					<div class="block-top"></div>
					<div class="block-content">
						Trabalho Realizado por Rodrigo e Vinicius.
						<br>
						<br>
						Ruby Three Cotia.
					</div>
					<div class="block-bottom"></div>
				</div>

	
			</div>
		</div>
</body>
</html>
